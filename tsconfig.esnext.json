{
  "compilerOptions": {
    "declaration": true,
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es2017",
    "noImplicitAny": true,
    "outDir": "./dist/esnext",
    "preserveConstEnums": true,
    "removeComments": false,
    "typeRoots": ["./node_modules/@types", "./src/@types"]
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "node_modules/**/*",
    "**/*.d.ts",
    "typings",
    "**/*-spec.ts",
    "node_modules/@firebase/app-types/private.d.ts",
    "abstracted-firebase"
  ]
}
