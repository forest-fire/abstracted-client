{
  "compilerOptions": {
    "declaration": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2017",
    "noImplicitAny": false,
    "outDir": "./lib",
    "preserveConstEnums": true,
    "removeComments": true,
    "typeRoots": ["./node_modules/@types", "./src/@types"],
    "plugins": [
      {
        "name": "typescript-lit-html-plugin"
      }
    ]
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "typings",
    "**/*-spec.ts",
    "node_modules/firebase-admin/lib/index.d.ts",
    "abstracted-firebase"
  ]
}
