{
  "name": "abstracted-client",
  "version": "0.15.8",
  "description": "Helpful abstraction on the firebase client API",
  "license": "MIT",
  "repository": "https://github.com/forest-fire/abstracted-admin",
  "author": "Ken Snyder <ken@ken.net>",
  "keywords": [
    "firebase",
    "typescript",
    "nodejs",
    "utility",
    "admin"
  ],
  "files": [
    "dist"
  ],
  "module": "dist/esnext/db.js",
  "main": "dist/cjs/db.js",
  "typings": "dist/esnext/db.d.ts",
  "scripts": {
    "clean": "rimraf lib",
    "lint": "tslint --force --format verbose \"src/**/*.ts\"",
    "build": "yarn build:tsc",
    "build:rollup": "tslint src/**/*.ts && rollup -c rollup.config.js",
    "build:tsc": "tsc -P tsconfig.esnext.json && tsc -P tsconfig.umd.json && tsc -P tsconfig.cjs.json",
    "test": "ts-node ./scripts/test.ts",
    "coverage": "nyc --include='src/**/*.ts' --reporter=text --reporter=html --reporter=lcov mocha --compilers ts:ts-node/register --recursive 'test/**/*.test.ts'",
    "watch": "npm run build -- --watch",
    "deploy": "ts-node ./scripts/deploy.ts ",
    "watch:test": "npm run test -- --watch"
  },
  "dependencies": {
    "@firebase/app": "^0.3.9",
    "@firebase/app-types": "^0.3.4",
    "@firebase/auth": "^0.9.4",
    "@firebase/auth-types": "^0.5.3",
    "@firebase/database": "^0.3.12",
    "@firebase/database-types": "^0.3.5",
    "abstracted-firebase": "^0.15.7",
    "common-types": "^1.9.6",
    "events": "^3.0.0",
    "firebase": "^5.8.4",
    "@firebase/firestore-types": "^1.0.2",
    "@firebase/messaging-types": "^0.2.5",
    "@firebase/storage-types": "^0.2.5",
    "lodash.first": "^3.0.0",
    "lodash.last": "^3.0.0",
    "serialized-query": "^0.4.9",
    "typed-conversions": "^0.8.13"
  },
  "peerDependencies": {
    "firemock": "^0.19.1"
  },
  "devDependencies": {
    "@firebase/auth-types": "^0.5.2",
    "@firebase/firestore-types": "^1.0.2",
    "@firebase/functions-types": "^0.2.3",
    "@firebase/messaging-types": "^0.2.5",
    "@firebase/storage-types": "^0.2.5",
    "@types/chai": "^4.1.7",
    "@types/chalk": "^2.2.0",
    "@types/events": "^3.0.0",
    "@types/faker": "^4.1.5",
    "@types/js-yaml": "^3.12.0",
    "@types/lodash.first": "^3.0.3",
    "@types/lodash.last": "^3.0.3",
    "@types/mocha": "^5.2.6",
    "@types/node": "^6.0.0",
    "@types/rimraf": "^2.0.2",
    "async-shelljs": "^0.1.2",
    "bili": "^4.4.0",
    "chai": "^4.2.0",
    "coveralls": "^3.0.3",
    "faker": "^4.1.0",
    "firemock": "^0.19.1",
    "js-yaml": "^3.9.1",
    "mocha": "^6.0.2",
    "nyc": "^13.3.0",
    "rimraf": "^2.6.3",
    "rollup": "^1.2.3",
    "rollup-plugin-typescript2": "^0.19.3",
    "test-console": "^1.1.0",
    "ts-node": "^8.0.2",
    "tslint": "^5.13.0",
    "typescript": "^3.3.3"
  },
  "engines": {
    "node": ">=4.0.0"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "lib"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [],
    "all": true
  }
}
