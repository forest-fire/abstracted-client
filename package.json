{
  "name": "abstracted-client",
  "version": "0.27.4",
  "description": "Helpful abstraction on the firebase client API",
  "license": "MIT",
  "repository": "https://github.com/forest-fire/abstracted-admin",
  "author": "Ken Snyder <ken@ken.net>",
  "keywords": [
    "firebase",
    "typescript",
    "nodejs",
    "utility",
    "admin"
  ],
  "files": [
    "dist"
  ],
  "module": "dist/esnext/db.js",
  "main": "dist/cjs/db.js",
  "typings": "dist/esnext/db.d.ts",
  "scripts": {
    "clean": "rimraf lib",
    "clean:nuclear": "rimraf lib node_modules yarn.lock && yarn cache clean && yarn && yarn upgrade",
    "lint": "tslint --force --format verbose \"src/**/*.ts\"",
    "build": "tsc -P tsconfig.esnext.json && tsc -P tsconfig.umd.json && tsc -P tsconfig.cjs.json",
    "build:nuclear": "yarn clean:nuclear && yarn build",
    "test": "ts-node ./scripts/test.ts",
    "coverage": "nyc --include='src/**/*.ts' --reporter=text --reporter=html --reporter=lcov mocha --compilers ts:ts-node/register --recursive 'test/**/*.test.ts'",
    "watch": "npm run build -- --watch",
    "deploy": "yarn build:nuclear && yarn test && yarn publish",
    "watch:test": "npm run test -- --watch"
  },
  "dependencies": {
    "@firebase/app": "^0.4.3",
    "@firebase/app-types": "^0.4.0",
    "@firebase/auth": "^0.11.2",
    "@firebase/auth-types": "^0.7.0",
    "@firebase/database": "^0.4.3",
    "@firebase/database-types": "^0.4.0",
    "abstracted-firebase": "^0.27.6",
    "common-types": "^1.11.10",
    "events": "^3.0.0",
    "lodash.first": "^3.0.0",
    "lodash.last": "^3.0.0",
    "serialized-query": "^0.8.0",
    "typed-conversions": "^0.10.1"
  },
  "peerDependencies": {
    "firemock": "^0.27.2"
  },
  "devDependencies": {
    "@firebase/firestore-types": "^1.3.0",
    "@firebase/functions-types": "^0.3.5",
    "@firebase/messaging-types": "^0.2.11",
    "@firebase/storage-types": "^0.2.11",
    "@types/chai": "^4.1.7",
    "@types/chalk": "^2.2.0",
    "@types/events": "^3.0.0",
    "@types/faker": "^4.1.5",
    "@types/js-yaml": "^3.12.1",
    "@types/lodash.first": "^3.0.3",
    "@types/lodash.last": "^3.0.3",
    "@types/mocha": "^5.2.6",
    "@types/node": "^12.0.2",
    "@types/rimraf": "^2.0.2",
    "async-shelljs": "^0.1.2",
    "chai": "^4.2.0",
    "faker": "^4.1.0",
    "firemock": "^0.27.2",
    "js-yaml": "^3.13.1",
    "mocha": "^6.1.4",
    "rimraf": "^2.6.3",
    "test-console": "^1.1.0",
    "ts-node": "^8.2.0",
    "tslint": "^5.16.0",
    "typescript": "^3.5.1"
  },
  "engines": {
    "node": ">=4.0.0"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "lib"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [],
    "all": true
  }
}
