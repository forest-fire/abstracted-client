{
  "name": "abstracted-client",
  "version": "0.30.0",
  "description": "Helpful abstraction on the Firebase client API",
  "license": "MIT",
  "repository": "https://github.com/forest-fire/abstracted-client",
  "author": "Ken Snyder <ken@ken.net>",
  "keywords": [
    "firebase",
