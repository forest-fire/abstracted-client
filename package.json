{
  "name": "abstracted-client",
  "version": "0.14.2",
  "description": "Helpful abstraction on the firebase admin API",
  "license": "MIT",
  "repository": "https://github.com/forest-fire/abstracted-admin",
  "author": "Ken Snyder <ken@ken.net>",
  "keywords": [
    "firebase",
    "typescript",
    "nodejs",
    "utility",
    "admin"
  ],
  "files": [
    "dist"
  ],
  "module": "dist/esnext/index.js",
  "main": "dist/cjs/index.js",
  "typings": "dist/esnext/index.d.ts",
  "scripts": {
    "clean": "rimraf lib",
    "lint": "tslint --force --format verbose \"src/**/*.ts\"",
    "build": "yarn build:tsc",
    "build:rollup": "tslint src/**/*.ts && rollup -c rollup.config.js",
    "build:tsc": "tsc -P tsconfig.esnext.json && tsc -P tsconfig.umd.json && tsc -P tsconfig.cjs.json",
    "test": "ts-node ./scripts/test.ts",
    "coverage": "nyc --include='src/**/*.ts' --reporter=text --reporter=html --reporter=lcov mocha --compilers ts:ts-node/register --recursive 'test/**/*.test.ts'",
    "watch": "npm run build -- --watch",
    "deploy": "ts-node ./scripts/deploy.ts ",
    "watch:test": "npm run test -- --watch"
  },
  "dependencies": {
    "@firebase/app": "^0.3.3",
    "@firebase/auth-types": "^0.3.4",
    "@firebase/database": "^0.3.4",
    "@firebase/firestore-types": "^0.4.3",
    "@firebase/messaging-types": "^0.2.3",
    "@firebase/storage-types": "^0.2.3",
    "abstracted-firebase": "^0.14.2",
    "common-types": "^1.8.2",
    "events": "^3.0.0",
    "firebase": "^5.2.0",
    "firebase-api-surface": "^0.8.5",
    "lodash.first": "^3.0.0",
    "lodash.last": "^3.0.0",
    "moment": "^2.20.1",
    "serialized-query": "^0.4.5",
    "typed-conversions": "^0.8.9"
  },
  "peerDependencies": {
    "firemock": "^0.18.0"
  },
  "devDependencies": {
    "@types/chai": "^3.0.0",
    "@types/chalk": "^0.4.31",
    "@types/chance": "^0.7.34",
    "@types/events": "^1.2.0",
    "@types/faker": "^4.1.0",
    "@types/js-yaml": "^3.11.1",
    "@types/lodash.first": "^3.0.3",
    "@types/lodash.last": "^3.0.3",
    "@types/mocha": "^2.0.0",
    "@types/node": "^6.0.0",
    "@types/rimraf": "^2.0.1",
    "async-shelljs": "^0.1.2",
    "bili": "^3.1.2",
    "chai": "^4.1.2",
    "chance": "^1.0.13",
    "coveralls": "^2.0.0",
    "faker": "^4.1.0",
    "firemock": "^0.18.0",
    "js-yaml": "^3.9.1",
    "mocha": "^5.0.0",
    "nyc": "^11.4.0",
    "rimraf": "^2.6.2",
    "rollup": "^0.60.7",
    "rollup-plugin-typescript2": "^0.15.0",
    "test-console": "^1.0.0",
    "ts-node": "^6.1.0",
    "tslint": "^5.10.0",
    "typescript": "^2.9.2"
  },
  "engines": {
    "node": ">=4.0.0"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "lib"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [],
    "all": true
  }
}
