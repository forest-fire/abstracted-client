    "abstracted-firebase": "^0.30.0",
    "common-types": "^1.11.14",
    "events": "^3.0.0",
    "lodash.first": "^3.0.0",
    "lodash.last": "^3.0.0",
    "serialized-query": "^0.8.1",
    "typed-conversions": "^0.10.1"
  },
