    "nodejs",
    "utility",
    "admin"
  ],
  "files": [
    "dist"
  ],
  "module": "dist/esnext/db.js",
  "main": "dist/cjs/db.js",
  "typings": "dist/esnext/db.d.ts",
  "scripts": {
    "clean": "rimraf lib",
    "clean:nuclear": "rimraf lib node_modules yarn.lock && yarn cache clean && yarn && yarn upgrade",
    "build": "tsc -P tsconfig.esnext.json && tsc -P tsconfig.umd.json && tsc -P tsconfig.cjs.json",
    "build:nuclear": "yarn clean:nuclear && yarn build",
    "test": "ts-node ./scripts/test.ts",
    "deploy": "yarn build:nuclear && yarn test && yarn publish",
    "watch:test": "npm run test -- --watch"
  },
  "dependencies": {
    "@firebase/app": "^0.4.12",
    "@firebase/app-types": "^0.4.2",
